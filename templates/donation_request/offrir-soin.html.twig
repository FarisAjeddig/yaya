{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="bradcam_area bradcam_bg_3">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text">
                        <h3>Offrir un soin</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid row">
        <div class="col-lg-12">
            <br><br>
            <h3 class="text-center">Liste des soins demandés</h3>
            <br><br>
        </div>

        {% for donationRequest in donationRequests %}
            <div class="col-lg-5 col-md-5 col-sm-10" style="background-color: #ffffff; border: solid 1px #d4dde8; border-radius: 5px; margin-left: 4%; margin-right: 4%; margin-bottom: 2%">
                <div class="row">
                    <div class="col-sm-6" style="padding-top: 2%;">
                        <h3 class="text-center" >{{ donationRequest.name }}</h3><br>
                        <p>Consultation à {{ donationRequest.prestation.price }}€</p>
                        <em>avec <a href="{{ url('doctor_profile', {id: donationRequest.doctor.id}) }}"><b> Dr. {{ donationRequest.doctor.username }}</b></a></em><br><br>
                        <b>{{ donationRequest.prestation.name }}</b><br><br>
                        <b>Description : </b><p class="text-center">{{ donationRequest.prestation.description }}</p><br>
                        <p style="text-align: center">
                            <a href="{{ url('offrir_soin', {id: donationRequest.id}) }}" class="btn btn-success">Offrir</a>
                        </p>
                    </div>
                    <div class="col-sm-6" style="padding: 0 !important;">
                        <img src="{{ asset('uploads/pictures/' ~ donationRequest.picture) }}" height="auto" width="100%" alt="Photo de {{ donationRequest.name }}">
                    </div>
                </div>
            </div>
        {% endfor %}
        {% if (donationRequests|length) == 0 %}
            <div class="col-lg-12 text-center">
                <p>Pas de demande de soin pour le moment. Repassez plus tard !</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
