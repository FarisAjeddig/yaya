<br><br>
<div class="form-control" style="padding: 0 !important;">
    {% if user.picture is not null %}
    <img src="{{ asset('uploads/pictures/' ~ user.picture) }}" height="auto" width="100%" alt="Photo de {{ user.username }}">
    {% else %}
    <img src="{{ '/build/images/doctor-single.jpg' }}" height="auto" width="100%" alt="Photo de {{ user.username }}">
    {% endif %}
    <button type="button" data-toggle="modal" data-target="#uploadModal" href="#" class="btn btn-dark btn-block">Modifier ma photo</button>
</div>

<!-- Modal changement d'image -->
<div id="uploadModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modifier ma photo</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <!-- Form -->
                {% form_theme form 'bootstrap_3_layout.html.twig' %}
                {{ form(form, { 'action': path('profile_edit_picture'), 'attr': { 'class': 'fos_user_group_edit' } }) }}
{#                <form method='post' action='' enctype="multipart/form-data">#}
{#                    Choisissez une image : <input type='file' name='file' id='file' class='form-control' ><br>#}
{#                    <input type='button' class='btn btn-info' value='Modifier' id='btn_upload'>#}
{#                </form>#}

                <!-- Preview-->
                <div id='preview'></div>
            </div>

        </div>

    </div>
</div>
