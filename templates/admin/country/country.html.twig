{% extends 'base.html.twig' %}
{% block body %}
    {% embed 'admin/base.html.twig' %}
        {% block secondTitle %}
            Admin - {{ country.name }} et ses villes
        {% endblock %}
        {% block bodyAdmin %}
            <div class="container-fluid row p-2" style="background-color: #cddcdf; box-sizing: unset;">
                <div class="col-lg-1"></div>
                <div class="col-lg-10 text-center"><br><br>
                    <a href="{{ url('admin_country_add_city', {id: country.id }) }}" class="genric-btn primary text-center">Ajouter une ville</a><br><br>
                    <table class="table table-dark">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ville</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for city in country.cities %}
                            <tr>
                                <th scope="row">{{ city.id }}</th>
                                <td>{{ city.name }}</td>
                                <td><a href="{{ url('admin_country_edit_city', {id: city.id}) }}" class="text-danger">Modifier</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <br><br>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}