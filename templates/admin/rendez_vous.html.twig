{% extends 'base.html.twig' %}
{% block body %}
    {% embed 'admin/base.html.twig' %}
        {% block secondTitle %}
            Admin - Rendez-vous
        {% endblock %}
        {% block bodyAdmin %}
            <div class="container-fluid row p-5">
                <div class="col-lg-1"></div>
                <div class="col-lg-10 text-center">
                    <table class="table table-dark">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Docteur</th>
                            <th scope="col">Patient</th>
                            <th scope="col">Acheteur</th>
                            <th scope="col">Prix de la prestation</th>
{#                            <th scope="col">État</th>#}
                        </tr>
                        </thead>
                        <tbody>
                        {% for appoint in appointments %}
                            <tr>
                                <th scope="row">{{ appoint.id }}</th>
                                <td>{{ appoint.doctor.username ~ ' IBAN : ' ~ appoint.doctor.bankAccountNumber }} <br> {{ appoint.doctor.phoneNumber ~ ' ' ~ appoint.doctor.emailCanonical }}</td>
                                <td>{{ appoint.namePatient ~ ' ' ~ appoint.phoneNumberPatient }} <br> {{ appoint.emailPatient }}</td>
                                <td>{{ appoint.buyer.username ~ ' ' ~ appoint.buyer.phoneNumber }} <br> {{ appoint.buyer.emailCanonical }}</td>
                                <td>{{ appoint.prestation.price }}€</td>
{#                                <td>{{ appoint.state }}</td>#}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}