{% extends 'base.html.twig' %}
{% block body %}
    {% embed 'admin/base.html.twig' %}
        {% block secondTitle %}
            Admin - Types de docteurs
        {% endblock %}
        {% block bodyAdmin %}
            <div class="container-fluid row p-2" style="background-color: #ffffff; box-sizing: unset;">

                <div class="col-lg-1"></div>
                <div class="col-lg-10 text-center"><br><br>
                    <a href="{{ url('admin_type_doctor_create') }}" class="genric-btn primary text-center">Ajouter un type</a><br><br>
                    <table class="table table-dark">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Type</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for type in types %}
                            <tr>
                                <th scope="row">{{ type.id }}</th>
                                <td>{{ type.name }}</td>
                                <td><a href="{{ url('admin_type_doctor_delete', {id: type.id}) }}" class="text-danger"><i class="fas fa-trash-alt" title="Supprimer"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <br><br>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
